export OMARCHY_PATH=$HOME/.local/share/omarchy
export PATH=$OMARCHY_PATH/bin/:$PATH


if [[ -z "$ZDOTDIR" ]]; then
    export ZDOTDIR=$HOME/.config/zsh
    source $ZDOTDIR/.zshenv
    source $ZDOTDIR/.zprofile
    source $ZDOTDIR/.zshrc
fi

