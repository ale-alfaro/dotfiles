    # Add your function directory to fpath
 function vf() {
     local file="$1"
     local path=$(zoxide query -l | xargs -I {} find {} -name "$file" -type f 2>/dev/null | head -n 1)
     if [ -n "$path" ]; then
         nvim "$path"
     else
         echo "File not found: $file"
     fi
}

function vfzf() {
    local file="$1" local path=$(zoxide query -l | xargs -I {} find {} -name "$file" -type f 2>/dev/null | fzf --preview "cat {}")
    if [ -n "$path" ]; then
        "$path"
    else
        echo "File not found or selection canceled: $file"
    fi
}
